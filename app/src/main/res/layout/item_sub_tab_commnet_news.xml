<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@drawable/preference_item"
    android:gravity="center_vertical" >

    <FrameLayout
        android:id="@+id/item_sub_tab_commnet_news_thumb_imageview_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp" >

        <RelativeLayout
            android:id="@+id/item_sub_tab_commnet_news_thumb_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_sub_tab_commnet_news_thumb_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_portrait" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_sub_tab_commnet_news_mask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_mask_img" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/item_sub_tab_commnet_news_thumb_imageview_layout"
        android:layout_toRightOf="@id/item_sub_tab_commnet_news_thumb_imageview_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_sub_tab_commnet_news_comment_content_textview"
            style="@style/unimportance_contents_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_sub_tab_commnet_news_comment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_sub_tab_commnet_news_thumb_imageview_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/item_sub_tab_commnet_news_user_thumb_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_sub_tab_commnet_news_comment_title_textview"
            android:layout_centerVertical="true"
            android:background="@drawable/default_portrait" />

        <TextView
            android:id="@+id/item_sub_tab_commnet_news_comment_title_textview"
            style="@style/importance_contents_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"/>
    </RelativeLayout>

</RelativeLayout>