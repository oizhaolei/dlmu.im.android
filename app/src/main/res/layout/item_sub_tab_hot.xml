<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/item_hot_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/tem_hot_grid_image_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_mask_img" />

    <ImageView
        android:id="@+id/item_hot_grid_lang_imageview"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/item_hot_grid_image"
        android:layout_alignRight="@+id/item_hot_grid_image"
        android:src="@drawable/flag" />

</RelativeLayout>