<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="#FFffffff" >

    <TextView
        android:id="@+id/listitem_qa_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:background="@drawable/background_button_gray"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/listitem_qa_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listitem_qa_create_date"
        android:layout_marginLeft="10dp"
        android:background="@drawable/right_chat_from_bg"
        android:clickable="true"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listitem_qa_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listitem_qa_question"
        android:layout_marginRight="10dp"
        android:background="@drawable/left_chat_to_bg"
        android:clickable="true"
        android:textColor="#cc000000"
        android:textSize="15sp" />

</RelativeLayout>