<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFffffff"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/item_main_tab_friend_thumb_img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/item_main_tab_friend_request_thumb_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_portrait" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_main_tab_friend_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/item_main_tab_friend_add_layout"
        android:layout_toRightOf="@+id/item_main_tab_friend_thumb_img_layout"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_main_tab_friend_content_one_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_main_tab_friend_content_one_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/item_main_tab_friend_content_one_gender_imageview"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_main_tab_friend_content_one_title_textview"
                android:src="@drawable/female" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_main_tab_friend_content_two_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_main_tab_friend_content_one_layout"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_main_tab_friend_content_three_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_main_tab_friend_content_two_title_textview"
            android:singleLine="true"
            android:textColor="@color/third_row_text_black_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_main_tab_friend_add_layout"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <Button
            android:id="@+id/item_main_tab_add_new_friend_btn"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_button_orange"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/add_as_friend"
            android:textColor="@color/white_text"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>