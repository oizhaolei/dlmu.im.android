<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/filter_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/filter_original" />

    <TextView
        android:id="@+id/filter_textview"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/filter_imageview"
        android:layout_below="@+id/filter_imageview"
        android:layout_marginTop="5dp"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/filter_original"
        android:textColor="@color/white_text" />

    <ImageView
        android:id="@+id/filter_checked"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/filter_imageview"
        android:layout_marginRight="-10dp"
        android:src="@drawable/filter_check"
        android:visibility="invisible" />

</RelativeLayout>