<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <com.ruptech.chinatalk.widget.EditTextWithDel
            android:id="@+id/activity_username_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_input_your_tel"
            android:maxLength="50"
            android:singleLine="true" />

        <com.ruptech.chinatalk.widget.EditTextWithDel
            android:id="@+id/activity_password_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:singleLine="true" />

        <Button
            android:id="@+id/activity_next_button"
            style="@style/text_appearance_medium"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_green"
            android:text="@string/login"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/activity_forget_passwd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/chat_content_bg"
            android:text="@string/find_password"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/or"
            android:textColor="#b3b3b3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/third_party_account"
            android:textColor="#b3b3b3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="#ffc7c7c7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#ffffffff" />

        <LinearLayout
            android:id="@+id/activity_login_signup_thirdpaty_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="20dp" >

            <RelativeLayout
                android:id="@+id/activity_login_signup_thirdpaty_weibo_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_round_button_sina"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/button_weibo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_signup_thirdpaty_qq_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_round_button_qq"
                    android:src="@drawable/button_qq" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_signup_thirdpaty_gmail_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="doLoginGoogle" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_round_button_google"
                    android:src="@drawable/button_gmail" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_signup_thirdpaty_facebook_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="doLoginFacebook" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_round_button_facebook"
                    android:src="@drawable/button_facebook" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_signup_thirdpaty_wechat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="doLoginWechat" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_round_button_wechat"
                    android:src="@drawable/button_wechat" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.facebook.widget.LoginButton
                android:id="@+id/facebook_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:confirm_logout="false"
                app:fetch_user_info="true" />

            <!--<com.google.android.gms.common.SignInButton-->
                <!--android:id="@+id/google_login_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:gravity="center" >-->
            <!--</com.google.android.gms.common.SignInButton>-->

            <com.sina.weibo.sdk.widget.LoginButton
                android:id="@+id/sina_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>