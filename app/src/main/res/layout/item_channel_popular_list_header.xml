<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/channel_header_height"
    android:background="@color/main_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/activity_friend_profile_user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_min_header_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/activity_channel_popular_title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/activity_channel_title_textview"
                style="@style/text_appearance_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/activity_channel_follow_buttom"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_color" />

            <com.ruptech.chinatalk.widget.processbutton.ActionProcessButton
                android:id="@+id/activity_channel_follow_buttom"
                style="@android:attr/tabWidgetStyle"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_button_orange"
                android:focusable="false"
                android:gravity="center"
                android:onClick="doFollow"
                android:text="@string/add_as_friend"
                android:textColor="@color/white_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_channel_popular_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_channel_popular_title_header" >

            <LinearLayout
                android:id="@+id/activity_channel_popular_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" >

                <TextView
                    android:id="@+id/activity_channel_popular_title_textview"
                    style="@style/text_appearance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/popular"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/activity_channel_popular_textview"
                    style="@style/text_appearance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_channel_popular_gray_imageview"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/activity_channel_popular_view"
                android:src="@drawable/ic_action_overflow_dark" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/activity_channel_popular_gray_imageview" >

                <TextView
                    android:id="@+id/activity_channel_popular_fans_title_textview"
                    style="@style/text_appearance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/friend_fans"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/activity_channel_popular_fans_textview"
                    style="@style/text_appearance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.ruptech.chinatalk.ui.fragment.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>