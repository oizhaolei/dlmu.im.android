<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/item_chatting_createdtime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_gray"
        android:padding="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/item_chatting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:gravity="right" >

        <FrameLayout
            android:id="@+id/item_chatting_thumb_imageview_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <RelativeLayout
                android:id="@+id/item_chatting_user_thumb_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/item_chatting_user_thumb_imageview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/item_chatting_user_sms_imageview"
                    android:layout_width="16dp"
                    android:layout_height="11dp"
                    android:layout_alignBottom="@+id/item_chatting_user_thumb_imageview"
                    android:layout_alignRight="@+id/item_chatting_user_thumb_imageview"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sms"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/item_chatting_user_lang_imageview"
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:layout_alignBottom="@+id/item_chatting_user_thumb_imageview"
                    android:layout_alignLeft="@+id/item_chatting_user_thumb_imageview"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cn" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_chatting_friend_mask"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_mask_img" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_chatting_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_chatting_thumb_imageview_layout"
            android:layout_margin="5dp"
            android:text="@string/empty"
            android:textColor="#888888"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/item_chatting_from_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_chatting_thumb_imageview_layout"
            android:background="@drawable/right_chat_from_bg"
            android:gravity="right"
            android:minWidth="75dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/item_chatting_photo_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:src="@drawable/ic_launcher" />

                <ProgressBar
                    android:id="@+id/item_chatting_photo_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_chatting_error_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_chatting_from_layout"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/item_chatting_thumb_imageview_layout"
            android:background="@drawable/background_auto_translation"
            android:text="@string/message_action_request_translate_again"
            android:textColor="#ff6600"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>