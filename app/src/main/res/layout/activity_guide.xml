<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/orange_highlight"
    android:keepScreenOn="true" >

    <ImageView
        android:id="@+id/guide_main_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_question_textview"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/guide" />

    <TextView
        android:id="@+id/guide_question_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="6"
        android:singleLine="false"
        android:text="@string/tips"
        android:textColor="@color/white_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_goto_dispatch_textview"
        style="@style/text_shadow_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/goto_dispatch" />

</RelativeLayout>