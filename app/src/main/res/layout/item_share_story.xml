<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_share_story_layout"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:background="@drawable/background_button_white"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_share_story_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_button_qq"
            android:contentDescription="@string/empty"
            android:padding="20dp"
            android:src="@drawable/button_qq" />

        <TextView
            android:id="@+id/item_share_story_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/share_to_qq" />
    </LinearLayout>

</RelativeLayout>