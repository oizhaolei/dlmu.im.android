<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/main_tab_setting_profile_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/preference_item"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:id="@+id/main_tab_setting_profile_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/preference_item"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/main_tab_setting_profile_thumb_imageview"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/main_tab_setting_profile_submenu_imageview"
                        android:layout_toRightOf="@+id/main_tab_setting_profile_thumb_imageview"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/main_tab_setting_profile_top_up_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/main_tab_setting_profile_name_textview"
                                style="@style/importance_contents_text_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:singleLine="true" />

                            <ImageView
                                android:id="@+id/main_tab_setting_profile_gender_imageview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/main_tab_setting_profile_name_textview" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/main_tab_setting_profile_tel_textview"
                            style="@style/unimportance_contents_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:singleLine="true" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/main_tab_setting_profile_submenu_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/empty"
                        android:paddingRight="20dp"
                        android:scaleType="matrix"
                        android:src="@drawable/submenu" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_tab_myself_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/preference_item"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/main_tab_myself_setting_title_textview"
                    style="@style/importance_contents_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/setting" />

                <ImageView
                    android:id="@+id/main_tab_myself_setting_new_mark"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toLeftOf="@+id/main_tab_myself_setting_submenu_imageview"
                    android:background="@drawable/new_mark"
                    android:minWidth="10.0dip"
                    android:textSize="10.0dip" />

                <ImageView
                    android:id="@+id/main_tab_myself_setting_submenu_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:scaleType="matrix"
                    android:src="@drawable/submenu" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>