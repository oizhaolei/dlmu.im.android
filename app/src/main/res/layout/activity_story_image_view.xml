<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_black"
    android:scrollbarAlwaysDrawVerticalTrack="false" >

    <it.sephiroth.android.library.imagezoom.ImageViewTouch
        android:id="@+id/item_story_imageview_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ruptech.chinatalk.widget.ImageProgressBar
        android:id="@+id/image_progress_bar"
        style="@style/ProgressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:indeterminate="false"
        android:max="100" />

    <RelativeLayout
        android:id="@+id/item_story_image_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/item_story_image_bottom_bg" >

        <HorizontalScrollView
            android:id="@+id/revise_message_fee_introduce_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/activity_story_bottom_view"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/chat_content_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minWidth="50dp"
                android:padding="1dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_story_imageview_location_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_content_bg"
                    android:clickable="true"
                    android:drawableLeft="@drawable/shot_location"
                    android:padding="2dp"
                    android:text="@string/city"
                    android:textColor="#fff"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/activity_story_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/item_story_image_reply_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/chat_content_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_indicator_reply" />

                <TextView
                    android:id="@+id/item_story_image_reply_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_story_image_good_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/chat_content_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:padding="10dp"
                app:ignore="UseCompoundDrawables" >

                <ImageView
                    android:id="@+id/item_story_image_good_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_action_social_like_unselected" />

                <TextView
                    android:id="@+id/item_story_image_good_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty" />
            </LinearLayout>
            
            <LinearLayout
		                android:id="@+id/item_story_image_share_view"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:adjustViewBounds="true"
		                android:background="@drawable/chat_content_bg"
		                android:clickable="true"
		                android:gravity="center_vertical"
		                android:minWidth="50dp"
		                android:padding="10dp" >

		            <ImageView
		                android:id="@+id/item_story_image_share_textview"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:padding="5dp"
		                android:src="@drawable/ic_action_social_share" />
				</LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>