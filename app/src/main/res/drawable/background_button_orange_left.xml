<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape android:shape="rectangle">
            <solid android:color="@color/orange_highlight" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="1dp" android:left="5dp" android:right="5dp" android:top="1dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/orange_highlight" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />

            <stroke android:width="1px" android:color="#33000000" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#c8f9a64d" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />

            <stroke android:width="1px" android:color="#33000000" />
        </shape></item>

</selector>