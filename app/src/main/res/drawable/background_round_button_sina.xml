<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="oval">
            <gradient android:angle="90" android:centerX="0.5" android:centerY="0.5" android:endColor="#f4c420" android:startColor="#f4c420" android:type="linear" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="360dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <stroke android:width="1px" android:color="#bf9e0d" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="#e6b614" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="360dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>