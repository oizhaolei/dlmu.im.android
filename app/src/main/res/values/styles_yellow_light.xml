<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Yellow_light" parent="@style/Theme.AppCompat.Light">
        <item name="android:selectableItemBackground">@drawable/actionbar_transparent_yellow_light</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:buttonStyleToggle">@style/MyToggleStyle</item>
        <item name="actionMenuTextColor">@color/opacify_white</item>
        <item name="android:actionMenuTextColor">@color/opacify_white</item>
        <!-- <item name="android:itemTextAppearance">@style/MyMenuStyle</item> -->
        <item name="android:actionMenuTextAppearance">@style/MyActionMenuTextStyle</item>
    </style>

    <style name="MyActionMenuTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/opacify_white</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleStyle</item>
    </style>

    <style name="MyActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/opacify_white</item>
    </style>

    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/actionbar_transparent_yellow_light</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <!-- <item name="android:textColor">#000000</item> -->
    </style>

    <!-- <style name="MyMenuStyle"> -->
    <!-- <item name="android:textColor">#FFFFFF</item> -->
    <!-- </style> -->

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/yellow_light_edit_text_holo_light</item>
        <!-- <item name="android:textColor">#000000</item> -->
    </style>

    <style name="MyToggleStyle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

</resources>